{% extends 'layout.twig' %}

{% block title %}{{parent()}} - Home{% endblock title %}

{% block body %}
	{% for category in items %}
		<div class="col-sm-6 col-xs-12 col-md-3 col-lg-2">
			<div class="thumbnail">
				<img src="/img/technologies/{{category.slug}}.png" alt="{{category.name}}" title="{{category.name}}">
				<hr class="m0">
				<div class="caption">
				    <h3 class="text-center">{{category.name}}</h3>
				    <p class="text-center">
				    	<a href="/technology/{{category.slug}}" class="btn btn-primary btn-ui" role="button">{{buttonDiscover}}</a>
				    </p>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}